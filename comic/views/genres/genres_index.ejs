<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comic Store</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>

<body>
    <div class="container my-3">
        <div class="row text-center bg-danger p-2 text-dark bg-opacity-25">
            <div class="col-12">
                <h1>Comic Store</h1>
                <p>Welcome to Comic Store</p>
            </div>
        </div>
        <div class="row ">
            <nav class="navbar navbar-expand-lg navbar-light bg-danger bg-opacity-50">
                <div class="container-fluid ">
                    <i class="fa-solid fa-house"></i>
                    <a class="navbar-brand" href="/">Home</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
                        <div class="navbar-nav ms-auto">
                            <a class="nav-link" href="/comics">Comic</a>
                            <a class="nav-link active" href="/genres">Genre</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-12 sub-title text-center">
                <h5>Genres Page</h5>
            </div>
            <div>
                <a href="/genres/create"><button type="button" class="btn btn-primary float-right"><i
                            class="fa-sharp fa-solid fa-plus"></i> Add Genre</button></a>
            </div>
            <div class="col-12 my-2 ">
                <table class="table">
                    <thead class="table-success text-center">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% genres.forEach(genre=> { %>
                            <tr>
                                <td class="text-center">
                                    <%= genre.id %>
                                </td>
                                <td class="text-center">
                                    <%= genre.name %>
                                </td>
                                <td class="text-center">
                                    <a href="/genres/edit/<%= genre.id %>" class="btn btn-primary"><i
                                            class="fa-solid fa-file-pen"></i></a>
                                    <a href="/genres/remove/<%= genre.id %>" class="btn btn-danger"><i
                                            class="fa-sharp fa-solid fa-trash"></i></a>
                                    </th>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>